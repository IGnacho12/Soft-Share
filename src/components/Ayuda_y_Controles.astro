<style>
  #boton-mostrar-controles {
    top: 4rem;
    left: 0.5rem;
    transition: all 0.3s ease;
    align-items: center;
    border-radius: 6px;
    color: rgba(0, 0, 0, 0.7);
    border: none;
    user-select: none;
    touch-action: manipulation;
    text-decoration: none;
    backdrop-filter: blur(10px);
  }
  #boton-mostrar-controles:hover {
    color: black;
    box-shadow: 0px 1px 10px 1px rgba(0, 0, 0, 0.1);
    text-decoration: underline;
    text-decoration-thickness: 0.1em;
    cursor: pointer;
  }
  a {
    top: 0.5rem;
    left: 0.5rem;
    font-weight: bold;
    padding: 6px 14px;
    border-radius: 6px;
    color: var(--text-color);
    border: none;
    box-shadow: 0px 0.5px 1px rgba(0, 0, 0, 0.1);
    user-select: none;
    text-decoration: none;
    backdrop-filter: blur(10px);
  }
  a:hover {
    box-shadow: 0px 1px 10px 1px rgba(0, 0, 0, 0.1);
    text-decoration: underline;
    text-decoration-thickness: 0.1em;
    cursor: pointer;
  }

  div.contenedor-padre {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 12px 8px;
    border-bottom: solid 1px black;
  }
  div.contenedor-padre:last-child {
    border: none;
  }
  div.contenedor-key {
    display: flex;
    gap: 2px;
  }
  kbd {
    font-size: 0.9em;
    background-color: rgba(13, 189, 27, 0.473);
    border-radius: 8px;
    padding: 0.5rem;
    font-family: inherit;
    line-height: 1;
  }

  html.dark #boton-mostrar-controles {
    color: rgba(255, 255, 255, 0.7);
  }
  html.dark #boton-mostrar-controles:hover {
    color: white;
    box-shadow: 0px 1px 10px 1px rgba(255, 255, 255, 0.1);
  }
  html.dark div.contenedor-padre {
    border-bottom: solid 1px white;
  }
  html.dark kbd {
    color: black;
    background-color: rgba(13, 189, 13, 0.733);
  }
  html.dark div {
    color: var(--text-color);
  }
  html.dark #ver-controles {
    background-color: black;
    border-color: white;
  }
</style>

<script>
  const BOTON_MOSTRAR_CONTROLES = document.getElementById(
    "boton-mostrar-controles"
  );
  const CONTROLES = document.getElementById("ver-controles");
  const BOTON_OCULTAR_CONTROLES = document.getElementById("ocultar-controles");

  BOTON_MOSTRAR_CONTROLES.addEventListener("click", () => {
    if (!CONTROLES.open) CONTROLES.showModal();
  });

  BOTON_OCULTAR_CONTROLES.addEventListener("click", () => {
    CONTROLES.close();
  });
</script>
