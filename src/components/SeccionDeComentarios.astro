<script>
  // Cargar los comentarios cuando la pÃ¡gina carga
  loadComments();
  async function loadComments() {
    const response = await fetch(
      "https://backend-soft-share-1tr9ac9dt-nachos-projects-077bc528.vercel.app/comments"
    );

    if (!response.ok) {
      throw new Error("Error al obtener los programas");
    }

    // Parsear la respuesta JSON
    const programs = await response.json();

    document.getElementById("commentsSection").innerHTML = programs
      .map(
        (comentario) => `
          <article>
        <div>
        <h3>${comentario.autor}</h3>
        <span>${comentario.fecha}</span>
        </div>
        
        <p>${comentario.comentario}</p>
      </article>
        `
      )
      .join("");
    function cargarCSS(ruta) {
      const head = document.head;
      const link = document.createElement("link");

      link.rel = "stylesheet";
      link.href = ruta;

      head.appendChild(link);
      console.log(`Hoja de estilos ${ruta} cargada.`);
    }
    cargarCSS("/src/css/estilarComentarios.css");
  }
</script>

