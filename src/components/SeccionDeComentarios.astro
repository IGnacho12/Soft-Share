---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Secci칩n de Comentarios">
  <main>
    <h2 class="font-bold">Comentarios 游닀</h2>
    <section id="commentsSection">
      <article>
        <p></p>
      </article>
    </section>
  </main>
</Layout>

<script>
  // Cargar los comentarios cuando la p치gina carga
  loadComments();
  async function loadComments() {
    const response = await fetch(
      "https://backend-soft-share-1tr9ac9dt-nachos-projects-077bc528.vercel.app/comments"
    );

    if (!response.ok) {
      throw new Error("Error al obtener los programas");
    }

    // Parsear la respuesta JSON
    const programs = await response.json();

    document.getElementById("commentsSection").innerHTML = programs
      .map(
        (comentario) => `
          <article class='shadow-lg shadow-green-black border border-slate-200 dark:border-black dark:shadow-black'>
        <div>
        <h3 class="${getRandomElement(array)} dark:saturate-90 text-[var(--reverse)]">${comentario.autor}</h3>
        <span>${comentario.fecha}</span>
        </div>
        
        <p>${comentario.comentario}</p>
      </article>
        `
      )
      .join("");
    // ColorParaLosNombres();
    function cargarCSS(ruta: string) {
      const head = document.head;
      const link = document.createElement("link");

      link.rel = "stylesheet";
      link.href = ruta;

      head.appendChild(link);
      console.log("CSS cargado:", ruta, "\n");
    }
    cargarCSS("/css/estilarComentarios.css");
  }
  const array = [
    "bg-blue-400/80", // Azul claro
    "bg-purple-400/80", // Morado claro
    "bg-indigo-400/80", // Azul noche m치s suave
    "bg-purple-300/80", // P칰rpura suave
    "bg-slate-400/80", // Azul gris치ceo claro
    "bg-fuchsia-400/80", // Morado vino claro
    "bg-indigo-300/80", // Azul violeta claro
    "bg-cyan-300/80", // Azul petr칩leo claro
    "bg-violet-300/80", // P칰rpura petr칩leo claro
  ];

  // Funci칩n para obtener de manera aleatoria un color
  function getRandomElement(array) {
    const randomIndex = Math.floor(Math.random() * array.length);
    return array[randomIndex];
  }
</script>

<style is:global>
  #commentsSection article {
    margin-bottom: 3rem;
    padding: 1rem;
    border-radius: 10px;
    word-break: break-word; 
    overflow-wrap: break-word;
    backdrop-filter: blur(10px); 
  }

  #commentsSection h3 {
    border-radius: 6px;
    padding: 2px 6px;
    min-width: fit-content;
  }

  #commentsSection p {
    font-style: italic;
    margin-left: 1rem;
    padding: 1rem;
  }

  #commentsSection span {
    font-weight: bold;
    font-size: 0.9rem;
    text-align: end;
  }

  #commentsSection div {
    display: flex;
    justify-content: space-between;
  }

  #commentsSection p {
    text-wrap: auto;
  }

</style>
