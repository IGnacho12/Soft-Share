      const head = document.head;
      const link = document.createElement("link");

      link.rel = "stylesheet";
      link.href = ruta;

      head.appendChild(link);
      console.log("CSS cargado:", ruta, "\n");
    }
    cargarCSS("/css/estilarComentarios.css");
  }
