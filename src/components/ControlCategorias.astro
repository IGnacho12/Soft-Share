<main
  class="flex flex-col h-12 overflow-hidden transition-all"
  id="main-controles-de-categorias"
>
  <button
    class="flex justify-center place-items-center items-center mb-2 bg-slate-400/20 dark:bg-slate-800 py-1 rounded-md gap-1 group ver-mas transition-all hover:text-[var(--reverse)] font-bold"
    >Selecciona las Categorías <img class="dark:invert"
      src="/assets/click.webp"
      class="size-8 group-hover:rotate-12 transition-all transition-duration-150"
      alt="click"
    /></button
  >

  <button
    id="mostrarCategorias"
    class="p-2 rounded-xl px-2 cursor-pointer w-fit show"
    id="mostrarCategorias"
  >
    Mostrar Categorías
  </button>

  <section
    class="allCategories mt-4 grid-cols-2 sm:grid-cols-3 md:grid-cols-4 xl:grid-cols-7 pb-2"
  >
    <!-- Todas las categorías -->

    <!-- ARCHIVO -->
