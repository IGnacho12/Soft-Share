      class="invisible absolute"
      type="checkbox"
      name="archivo"
      id="Archivo"
    />
    <label for="Archivo" class="p-1 bg-gray-600/20 dark:bg-gray-800 rounded-xl px-2"
      >Archivo</label
    >

    <!-- UTILIDAD -->
    <input
      class="invisible absolute"
      type="checkbox"
      name="utilidad"
      id="Utilidad"
    />
    <label for="Utilidad" class="p-1 bg-gray-600/20 dark:bg-gray-800 rounded-xl px-2"
      >Utilidad</label
    >
    <!-- ACTIVADOR -->
    <input
      class="invisible absolute"
      type="checkbox"
      name="activador"
      id="Activador"
    />
    <label for="Activador" class="p-1 bg-gray-600/20 dark:bg-gray-800 rounded-xl px-2"
      >Activador</label
    >
    <!-- JUEGO -->
    <input class="invisible absolute" type="checkbox" name="juego" id="Juego" />
    <label for="Juego" class="p-1 bg-gray-600/20 dark:bg-gray-800 rounded-xl px-2">Juego</label>
    <!-- MEDIA -->
    <input class="invisible absolute" type="checkbox" name="media" id="Media" />
    <label for="Media" class="p-1 bg-gray-600/20 dark:bg-gray-800 rounded-xl px-2">Media</label>
    <!-- HARDWARE -->
    <input
      class="invisible absolute"
      type="checkbox"
      name="hardware"
      id="Hardware"
    />
    <label for="Hardware" class="p-1 bg-gray-600/20 dark:bg-gray-800 rounded-xl px-2"
      >Hardware</label
    >
    <!-- OPTIMIZACIÓN -->
    <input
      class="invisible absolute"
      type="checkbox"
      name="optimizacion"
      id="Optimización"
    />
    <label for="Optimización" class="p-1 bg-gray-600/20 dark:bg-gray-800 rounded-xl px-2"
      >Optimización</label
    >
    <!-- MÚLTIPLE -->
    <input
      class="invisible absolute"
      type="checkbox"
      name="multiple"
      id="Multiple"
    />
    <label for="Multiple" class="p-1 bg-gray-600/20 dark:bg-gray-800 rounded-xl px-2"
      >Múltiple</label
    >
    <!-- SEGURIDAD -->
    <input
      class="invisible absolute"
      type="checkbox"
      name="seguridad"
      id="Seguridad"
    />
    <label for="Seguridad" class="p-1 bg-gray-600/20 dark:bg-gray-800 rounded-xl px-2"
      >Seguridad</label
    >
    <!-- ESTILO -->
    <input
      class="invisible absolute"
      type="checkbox"
      name="estilo"
      id="Estilo"
    />
    <label for="Estilo" class="p-1 bg-gray-600/20 dark:bg-gray-800 rounded-xl px-2">Estilo</label
    >
    <!-- GESTIÓN DE ARCHIVOS -->
    <input
      class="invisible absolute"
      type="checkbox"
      name="gestionDeArchivos"
      id="Gestión de archivos"
    />
    <label
      for="Gestión de archivos"
      class="p-1 bg-gray-600/20 dark:bg-gray-800 rounded-xl px-2 lg:col-span-1 md:col-span-2 xl:col-span-3"
      >Gestión de Archivos</label
    >
  </section>
</main>

<style>
  button:active {
    transform: scale(0.9);
    transition: all 0.3s cubic-bezier(0.075, 0.82, 0.165, 1);
  }

  main {
    height: 45px;
    transition: all 0.5s cubic-bezier(0.83, 0.05, 0.16, 0.96);
    interpolate-size: allow-keywords;
  }
  /* Vamos a comprobar con javascript cuando se presione el botón ver-mas */
  /* main:hover {
    height: auto;
  } */

  .mostrar-controles-de-catetorias {
    height: auto;
  }

  .no-mostrar-controles-de-categorias {
    height: 45px;
  }

  /* Bótones para seleccionar categorías */

  label {
    transition: all 0.3s ease;
    user-select: none;
    cursor: pointer;
    font-size: large;
    margin: 3px 5px;
    width: fit-content;
  }

  section {
    display: grid;
  }

  input:checked + label {
    background-color: black;
    color: white;
    font-weight: bold;
    transition: all 0.3s ease;
    text-decoration: underline;
    text-decoration-thickness: 2px;
    text-underline-offset: 2px;
  }

  .allCategories label {
    transition: all 0.4s ease;
    user-select: none;
    cursor: pointer;
  }

  .allCategories input:checked + label {
    background-color: rgba(0, 255, 0, 0.178);
    color: var(--reverse);
    font-weight: normal;
    transition: all 0.4s ease;
    text-decoration: none;
    border-radius: 2px;
    font-weight: bold;
  }
  @media (prefers-color-scheme: dark) {
    .allCategories input:checked + label {
      background-color: rgba(25, 0, 255, 0.5);
    }
  }
</style>

<script type="module">
  import BuscarProgramas from "/js/BuscarProgramas.js";
  // Obtener todos los checkboxes
  const checkboxes = document.querySelectorAll('input[type="checkbox"]');

  window.mostrarCategoriasBoolean = true;

  const BOTON_MOSTRAR_CATEGORIAS = document.getElementById("mostrarCategorias");

  BOTON_MOSTRAR_CATEGORIAS.addEventListener("click", function () {
    const categoriasText = document.querySelectorAll(".textCategorias");

    if (mostrarCategoriasBoolean) {
      BOTON_MOSTRAR_CATEGORIAS.classList.remove("show");
      BOTON_MOSTRAR_CATEGORIAS.classList.add("not-show");
      // Ocultar las categorías
      categoriasText.forEach((element) => {
        element.style.display = "none";
      });
    } else {
      BOTON_MOSTRAR_CATEGORIAS.classList.remove("not-show");
      BOTON_MOSTRAR_CATEGORIAS.classList.add("show");
      // Mostrar las categorías
      categoriasText.forEach((element) => {
        element.style.display = "block";
      });
    }

    // Alternar el estado
    mostrarCategoriasBoolean = !mostrarCategoriasBoolean;
    console.log("Mostrar categorias estado", mostrarCategoriasBoolean);
  });

  // Declarar la variable globalmente
  window.categoriasElegidas = [];

  // Agregar event listeners a los checkboxes
  checkboxes.forEach((checkbox) => {
    checkbox.addEventListener("change", (event) => {
      // Verificar que el evento target es un input y usar un type assertion
      const target = event.target; // Type assertion

      if (target) {
        if (target.checked) {
          // Si está activado, agregar al array

          window.categoriasElegidas.push(target.id);
        } else {
          // Si está desactivado, eliminar del array
          window.categoriasElegidas = window.categoriasElegidas.filter(
            (item) => item !== target.id
          );
        }
      }
      // Mostrar el array actualizado
      BuscarProgramas(window.ValorDeUsuario, window.categoriasElegidas);
    });
  });

  // Mostrar los controles de las categorías
  const BOTON_VER_MAS = document.querySelector(".ver-mas");
  const MAIN_CONTROLES_DE_CATEGORIA = document.querySelector(
    "#main-controles-de-categorias"
  );

  let MAIN_CONTROLES_BOOLEANO = false;

  BOTON_VER_MAS.addEventListener("click", () => {
    if (MAIN_CONTROLES_BOOLEANO) {
      MAIN_CONTROLES_DE_CATEGORIA.classList.remove(
        "mostrar-controles-de-catetorias"
      );
      MAIN_CONTROLES_BOOLEANO = false;
    } else {
      MAIN_CONTROLES_DE_CATEGORIA.classList.add(
        "mostrar-controles-de-catetorias"
      );
      MAIN_CONTROLES_BOOLEANO = true;
    }
  });
</script>
