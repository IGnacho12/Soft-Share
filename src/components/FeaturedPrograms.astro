---
import SearchBtn from "./Search-btn.astro";
---

<article>
  <header class="flex flex-col gap-y-4 lg:flex-row">
    <h2 class="font-bold underline underline-offset-[10px] text-1xl lg:text-3xl text-center">Programas destacadosðŸ‘‘</h2>
    <div class="mb-4 lg:mb-0">
      <SearchBtn />
    </div>
  </header>
  <button id="reloadButton"><img src="reload.svg" alt="" /></button>

  <article id="programList" class="contenedor">
    <!-- Los programas se cargarÃ¡n aquÃ­ -->
  </article>
</article>

<script type="module">
  import LoadPrograms from "../js/rendererAllPrograms.js";
  import searchPrograms from "../js/searchPrograms.js"
  
// When click "Reload Button" the programs are reaload too
  document
    .getElementById("reloadButton")
    .addEventListener("click", () => LoadPrograms());

  // Escuchar el cambio en el input para realizar la bÃºsqueda sin esperar Enter
  document.querySelector("#input").addEventListener("input", async () => {
    const InputValue = document.querySelector("#input").value;
    console.log("El valor ah cambiado")
    searchPrograms(InputValue)
  });

</script>

<style>
  header {
    display: flex;
    align-items: center;
    justify-content: space-between;
  }
  #reloadButton {
    position: fixed;
    top: 60px;
    right: 30px;
    border: none;
    transition: 0.3s ease;
    cursor: pointer;
    transform: rotate(0deg);
    background-color: var(--background-color);
  }

  #reloadButton:hover {
    transform: rotate(90deg);
  }

  #reloadButton img {
    height: 32px;
  }
</style>
