<main
  class="flex flex-col h-12 overflow-hidden transition-all mt-4"
  id="main-controles-de-categorias"
>
  <button
    class="flex justify-center place-items-center items-center mb-2 bg-slate-400/20 dark:bg-slate-800 py-1 rounded-md gap-1 group ver-mas transition-all hover:text-[var(--reverse)] font-bold"
    >Selecciona las Categorías <img
      id="img"
      class="dark:invert"
      src="click.webp"
      class="group-hover:rotate-12 transition-all transition-duration-150"
      alt="click"
    /></button
  >

  <section
    class="allCategories mt-4 grid-cols-2 sm:grid-cols-3 md:grid-cols-4 xl:grid-cols-7 pb-2"
  >
    <!-- Todas las categorías -->

    <!-- ARCHIVO -->
    <input
      class="invisible absolute"
      type="checkbox"
      name="archivo"
      id="Archivo"
    />
    <label
      for="Archivo"
      class="p-1 bg-gray-600/20 dark:bg-gray-800 rounded-xl px-2">Archivo</label
    >

    <!-- UTILIDAD -->
    <input
      class="invisible absolute"
      type="checkbox"
      name="utilidad"
      id="Utilidad"
    />
    <label
      for="Utilidad"
      class="p-1 bg-gray-600/20 dark:bg-gray-800 rounded-xl px-2"
      >Utilidad</label
    >
    <!-- ACTIVADOR -->
    <input
      class="invisible absolute"
      type="checkbox"
      name="activador"
      id="Activador"
    />
    <label
      for="Activador"
      class="p-1 bg-gray-600/20 dark:bg-gray-800 rounded-xl px-2"
      >Activador</label
    >
    <!-- JUEGO -->
    <input class="invisible absolute" type="checkbox" name="juego" id="Juego" />
    <label
      for="Juego"
      class="p-1 bg-gray-600/20 dark:bg-gray-800 rounded-xl px-2">Juego</label
    >
    <!-- MEDIA -->
    <input class="invisible absolute" type="checkbox" name="media" id="Media" />
    <label
      for="Media"
      class="p-1 bg-gray-600/20 dark:bg-gray-800 rounded-xl px-2">Media</label
    >
    <!-- HARDWARE -->
    <input
      class="invisible absolute"
      type="checkbox"
      name="hardware"
      id="Hardware"
    />
    <label
      for="Hardware"
      class="p-1 bg-gray-600/20 dark:bg-gray-800 rounded-xl px-2"
      >Hardware</label
    >
    <!-- OPTIMIZACIÓN -->
    <input
      class="invisible absolute"
      type="checkbox"
      name="optimizacion"
      id="Optimización"
    />
    <label
      for="Optimización"
      class="p-1 bg-gray-600/20 dark:bg-gray-800 rounded-xl px-2"
      >Optimización</label
    >
    <!-- MÚLTIPLE -->
    <input
      class="invisible absolute"
      type="checkbox"
      name="multiple"
      id="Multiple"
    />
    <label
      for="Multiple"
      class="p-1 bg-gray-600/20 dark:bg-gray-800 rounded-xl px-2"
      >Múltiple</label
    >
    <!-- SEGURIDAD -->
    <input
      class="invisible absolute"
      type="checkbox"
      name="seguridad"
      id="Seguridad"
    />
    <label
      for="Seguridad"
      class="p-1 bg-gray-600/20 dark:bg-gray-800 rounded-xl px-2"
      >Seguridad</label
    >
    <!-- ESTILO -->
    <input
      class="invisible absolute"
      type="checkbox"
      name="estilo"
      id="Estilo"
    />
    <label
      for="Estilo"
      class="p-1 bg-gray-600/20 dark:bg-gray-800 rounded-xl px-2">Estilo</label
    >
    <!-- GESTIÓN DE ARCHIVOS -->
    <input
      class="invisible absolute"
      type="checkbox"
      name="gestionDeArchivos"
      id="Gestión de archivos"
    />
    <label
      for="Gestión de archivos"
      class="p-1 bg-gray-600/20 dark:bg-gray-800 rounded-xl px-2 md:col-span-2 xl:col-span-3"
      >Gestión de Archivos</label
    >
  </section>
</main>

<style>
  button:active {
    transform: scale(0.9);
    transition: all 0.3s cubic-bezier(0.075, 0.82, 0.165, 1);
  }

  main {
    height: 45px;
    transition: all 0.3s cubic-bezier(0.83, 0.05, 0.16, 0.96);
    interpolate-size: allow-keywords;
  }
  /* Vamos a comprobar con javascript cuando se presione el botón ver-mas */
  /* main:hover {
    height: auto;
  } */

  .mostrar-controles-de-catetorias {
    height: auto;
  }

  .no-mostrar-controles-de-categorias {
    height: 45px;
  }

  /* Bótones para seleccionar categorías */

  label {
    transition: all 0.3s ease;
    user-select: none;
    cursor: pointer;
    font-size: large;
    margin: 3px 5px;
    width: fit-content;
  }

  section {
    display: grid;
  }

  input:checked + label {
    background-color: black;
    color: white;
    font-weight: bold;
    transition: all 0.3s ease;
    text-decoration: underline;
    text-decoration-thickness: 2px;
    text-underline-offset: 2px;
  }

  .allCategories label {
    transition: all 0.2s ease;
    user-select: none;
    cursor: pointer;
    padding: 2px 5px;
    line-height: 2;
  }

  .allCategories input:checked + label {
    background-color: rgba(5, 204, 5, 0.178);
    color: var(--reverse);
    font-weight: normal;
    transition: all 0.2s ease;
    text-decoration: none;
    border-radius: 2px;
    font-weight: bold;
  }
  html.dark .allCategories input:checked + label {
    background-color: rgba(16, 0, 241, 0.801);
  }
  #img {
    height: 32px;
    width: auto;
  }
</style>

<script type="module">
  import { initBusquedaYCategorias } from "../utils/duo.js";
  document.addEventListener("astro:page-load", () => {
    initBusquedaYCategorias();
  });
  initBusquedaYCategorias();
</script>
