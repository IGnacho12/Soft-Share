<div class="container">
  <input type="text" placeholder="" id="input" />
  <div class="btn" id="btn">
    <img src="binoculars.svg" alt="Imagen de binoculares" />
  </div>
</div>

<script>
  const btnElement = document.getElementById("btn");

  // Entra el mouse
  btnElement.addEventListener("mouseover", () => {
    const inputElement = document.querySelector("#input") as HTMLInputElement;
    inputElement.classList.add("widthInput");
    inputElement.focus()
    
  });
  //Sale el mouse
  btnElement.addEventListener("mouseout", () => {
    const inputElement = document.querySelector("#input") as HTMLInputElement;
    inputElement.classList.remove("widthInput");
    inputElement.blur()
    inputElement.value = ""
  });
</script>

