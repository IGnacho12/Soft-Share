<div class="container">
  <input type="text" placeholder="" id="input" />
  <div class="btn" id="btn">
    <img src="binoculars.svg" alt="Imagen de binoculares" />
  </div>
</div>

<script>
  function configurarListeners() {
    const btnElement = document.getElementById("btn");
    const inputElement = document.getElementById("input");

    if (!btnElement || !inputElement) return;

    // Remover cualquier listener previo para evitar duplicados
    btnElement.removeEventListener("mouseover", mouseOverHandler);
    btnElement.removeEventListener("mouseout", mouseOutHandler);

    // Definir los manejadores de eventos
    function mouseOverHandler() {
      inputElement.classList.add("widthInput");
      inputElement.focus();
      console.log("Input en focus");
    }

    function mouseOutHandler() {
      inputElement.classList.remove("widthInput");
      inputElement.blur();
      inputElement.value = "";
    }

    // Agregar los event listeners
    btnElement.addEventListener("mouseover", mouseOverHandler);
    btnElement.addEventListener("mouseout", mouseOutHandler);
  }

  // Configurar verificación periódica cada 500 ms
  setInterval(() => {
    const btnElement = document.getElementById("btn");
    if (btnElement) {
      configurarListeners();
    }
  }, 500);

  // Ejecutar al cargar el DOM
  document.addEventListener("DOMContentLoaded", configurarListeners);
</script>

<style>
  .container {
    display: flex;
  }

  input {
    width: 0px;
    margin: 0;
    padding: 0;
    border: 0;
    transition: width 0.5s ease;
    outline: none;
    font-family: 'Geist';
    font-weight: bold;
    background-color: var(--background-color);
  }

  .btn {
    padding: 2px;
    transition: transform 0.2s ease;
  }

  .btn:hover {
    transform: scale(1.3);
  }

  .widthInput {
    width: 15em;
    background-color: #fff;
    border-radius: 10px;
    border: 3px solid black;
    padding-left: 15px;
  }
</style>
