---
import "../styles/md.css";
import Header from "../components/Header.astro";
import { ClientRouter } from "astro:transitions";
---

<!doctype html>
<html lang="es" class="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>Soft Share - Repositorio de tus programas ðŸ¤“</title>
    <ClientRouter />
  </head>
  <body class="flex flex-col min-h-screen relative">
    <a
      class="p-2 z-50 w-fit fixed"
      target="_blank"
      href="https://github.com/IGnacho12/Soft-Share"
    >
      <img class="dark:inverted dark:invert" src="assets/github.svg" alt="" />
    </a>
    <!-- Fondos -->
    <!-- Fondo modo claro  -->
    <div
      class="block dark:hidden absolute inset-0 -z-10 w-full min-h-screen bg-white bg-[linear-gradient(to_right,#f0f0f0_1px,transparent_1px),linear-gradient(to_bottom,#f0f0f0_1px,transparent_1px)] bg-[size:6rem_4rem]"
    >
    </div>

    <!-- Fondo modo oscuro  -->
    <!-- Gradiente que se queda fijo arriba -->
    <div
      class="hidden dark:block absolute top-0 left-0 w-full min-h-screen -z-10 bg-no-repeat bg-[radial-gradient(ellipse_80%_120%_at_50%_0%,rgba(120,119,198,0.3),rgba(0,0,0,0))]"
    >
    </div>

    <!-- Fondo oscuro que cubre todo lo demÃ¡s -->
    <div
      class="hidden dark:block absolute inset-0 w-full min-h-screen -z-20 bg-neutral-950"
    >
    </div>

    <Header />
    <main class="">
      <slot />
    </main>
  </body>
</html>

<style>
  @font-face {
    font-family: "ones";
    src: url("/Onest-Variable.ttf");
  }
  html,
  body {
    margin: 0;
    width: 100%;
    min-height: 100%;
    font-family: "ones", "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
  }

  /* Oculta la barra de scroll pero mantiene el scroll funcional */
  html {
    overflow-y: scroll; /* Asegura que el scroll estÃ© activo */
    scrollbar-width: none; /* Firefox */
    -ms-overflow-style: none; /* IE/Edge */
  }

  html::-webkit-scrollbar {
    display: none; /* Chrome, Safari, Opera */
  }

  html {
    overflow-y: scroll;
  }
</style>
