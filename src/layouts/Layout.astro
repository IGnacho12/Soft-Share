---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>
<style is:global>
  :root {
    --background-color: #fbfbfe;
    --text-color: #000000;
    --text-gray-color: #666;
    --blue: #2f27ce;
  }

  @font-face {
    font-family: "geist";
    src: url("../../public/fonts/GeistVF.ttf");
  }

  * {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
  }

  body {
    height: 100%;
    width: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
    font-family: "geist";

    background-color: var(--background-color);
    color: var(--text-color);
  }
  ::selection {
    color: white;
    background-color: black;
  }

  /* Estilos de elementos principales */

  h1 {
    font-size: 4.5rem;
    align-self: center;
  }
  h2 {
    font-size: 2rem;
    align-self: center;
  }
  p {
    font-size: 1.2rem;
    text-wrap: balance;
  }

  code {
    font-family:
      Menlo,
      Monaco,
      Lucida Console,
      Liberation Mono,
      DejaVu Sans Mono,
      Bitstream Vera Sans Mono,
      Courier New,
      monospace;
  }
</style>
