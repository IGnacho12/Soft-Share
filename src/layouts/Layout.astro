---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es" class="dark">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="Programas, Utilidades, Scripts, Juegos, encuentralos y subelos en segundos con soft-share."
    />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta
      name="keywords"
      content="Software, Subir, Descargar, Donwload, Upload, Share"
    />
    <!-- Icono -->
    <link
      rel="icon"
      href="/assets/logoSF.svg"
      type="image/svg+xml"
      sizes="24x24"
      <link
      rel="icon"
      href="/readme images/a5.svg"
      type="image/svg+xml"
      sizes="512x512"
    />
    <meta name="apple-mobile-web-app-title" content="Soft-Share page" />
    <meta name="generator" content={Astro.generator} />
    <meta
      name="google-site-verification"
      content="hzbJZ4KQX_hvr8hMcKMdm5PNV71vwFUSSmTcx7zjmh4"
    />
    <title>{title}</title>
  </head>
  <!-- https://bg.ibelick.com/ -->
  <!-- Background de las líneas -->
  <body
    class="text-black dark:bg-[#1a1a1a] dark:text-gray-200
         bg-[linear-gradient(to_right,_#f0f0f0_1px,_transparent_1px),_linear-gradient(to_bottom,_#f0f0f0_1px,_transparent_1px)]
         dark:bg-[linear-gradient(to_right,_#000_1px,_transparent_1px),_linear-gradient(to_bottom,_#000_1px,_transparent_1px)]"
  >
    <slot />
  </body>
  <style is:global>
