---
interface Props {
  title: string;
}

const { title } = Astro.props;
import { ViewTransitions } from "astro:transitions";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="Programas, Utilidades, Scripts, Juegos, encuentralos y subelos en segundos con soft-share."
    />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta
      name="keywords"
      content="Software, Subir, Descargar, Donwload, Upload, Share"
    />
    <!-- Icono -->
    <link rel="icon" href="/a5.ico" >
    <link rel="icon" href="/a5.svg" type="image/svg+xml" sizes="512x512">
    <meta name="apple-mobile-web-app-title" content="Soft-Share page" />
    <link rel="manifest" href="/logo.png/site.webmanifest" />
    <meta name="generator" content={Astro.generator} />
    <meta
      name="google-site-verification"
      content="hzbJZ4KQX_hvr8hMcKMdm5PNV71vwFUSSmTcx7zjmh4"
    />
    <title>{title}</title>
    <ViewTransitions />
  </head>
  <body class="background">
    <div class="background"></div>
    <slot />
  </body>
</html>
<style is:global>
  :root {
    --background-color: #fbfbfe;
    --text-color: #00000;
    --text-gray-color: #666;
    --blue: #2f27ce;
  }

  @font-face {
    font-family: "geist";
    src: url("/fonts/GeistVF.ttf");
  }

  * {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
  }
  html {
    scroll-behavior: smooth;
  }

  body {
    height: 100%;
    width: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
    font-family: "geist";

    background-color: var(--background-color);
    color: var(--text-color);
  }
  ::selection {
    color: white;
    background-color: black;
  }

  /* Estilos de elementos principales */

  h1 {
    font-size: 4.5em;
    align-self: center;
  }
  h2 {
    font-size: 2rem;
    align-self: center;
  }
  p {
    font-size: 1.2rem;
    text-wrap: balance;
  }

  code {
    font-family:
      Menlo,
      Monaco,
      Lucida Console,
      Liberation Mono,
      DejaVu Sans Mono,
      Bitstream Vera Sans Mono,
      Courier New,
      monospace;
  }

  .background {

  background-color: var(--background-color);
  background-image: 
    linear-gradient(to right, #f0f0f0 1px, transparent 1px),
    linear-gradient(to bottom, #f0f0f0 1px, transparent 1px);
  background-size: 6rem 4rem;
}

</style>
