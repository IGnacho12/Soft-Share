      color-scheme: light dark;
      --background-color: #fbfbfe;
      --text-color: #00000;
      --text-gray: #666;
      --blue: #2f27ce;
      --reverse: rgb(0, 0, 0);
    }

    @media (prefers-color-scheme: dark) {
      :root {
        --background-color: #1a1a1a;
        --text-color: #d1d5db;
        --text-gray: #aaa;
        --blue: #8f94ff;
        --reverse: rgb(255, 255, 255);
      }
    } */
    @font-face {
      font-family: "geist";
      src: url("/fonts/GeistVF.woff2");
    }

    * {
      box-sizing: border-box;
      margin: 0;
      padding: 0;
    }
    html {
      scroll-behavior: smooth;
    }

    body {
      height: 100%;
      width: 100%;
      display: flex;
      justify-content: center;
      align-items: center;
      font-family: "geist";
      background-color: var(--background-color);
      color: var(--text-color);
    }
    ::selection {
      color: white;
      background-color: black;
    }

    /* Estilos de elementos principales */

    h1 {
      font-size: 4.5em;
      align-self: center;
    }
    h2 {
      font-size: 2rem;
      align-self: center;
    }
    p {
      font-size: 1.2rem;
      text-wrap: balance;
    }

    code {
      font-family:
        Menlo,
        Monaco,
        Lucida Console,
        Liberation Mono,
        DejaVu Sans Mono,
        Bitstream Vera Sans Mono,
        Courier New,
        monospace;
    }

    article.contenedor {
      display: grid;
      gap: 9px 3px;
    }

    @media (max-width: 730px) {
      article.contenedor {
        grid-template-columns: 100%;
      }
    }
    @media (min-width: 730px) and (max-width: 1200px) {
      article.contenedor {
        grid-template-columns: 50% 50%;
      }
    }
    @media (min-width: 1200px) {
      article.contenedor {
        grid-template-columns: 33.33% 33.33% 33.33%;
      }
    }

    div.div-container {
      padding: 10px;
    }

    h3 {
      font-size: 19px;
      font-weight: bold;
      text-shadow: 1px 1px rgba(0, 0, 0, 0.1);
    }

    article.contenedor {
      display: grid;
      gap: 9px 3px;
    }

    header {
      display: flex;
      gap: 4px;
      align-items: center;
    }

    img {
      height: 32px;
      width: auto;
      object-fit: cover;
      border-radius: 2px;
    }

    article span {
      color: #666666;
      margin-top: 5px;
      width: 98%;
      display: block;
      overflow-wrap: break-word;
      text-shadow: 1px 1px rgba(0, 0, 0, 0.178);
    }

    html.dark article span {
      color: #94a3b8;
      text-shadow: 1px 1px rgba(255, 255, 255, 0.25);
    }

    #formularioDeProgramas article {
      margin: 40px;
    }

    #formularioDeProgramas h4 {
      font-size: 1.4rem;
    }

    #formularioDeProgramas p {
      color: gray;
    }

    #notFound404 {
      grid-column: span 3 / span 3;
    }

    /* Mostrar u ocultar los spans que muestran las categorías */
    .show {
      background-color: black;
      color: white;
      font-weight: bold;
      transition: all 0.3s ease;
      text-decoration: underline;
    }
    .not-show {
      background-color: rgba(128, 128, 128, 0.253);
      color: black;
      font-weight: normal;
      transition: all 0.4s ease;
      text-decoration: none;
      border-radius: 2px;
    }

    .mostrarSpanCategorias {
      display: block;
    }
    .ocultarSpanCategorias {
      display: none;
    }

    /* Centrar el hamster */
    .wheel-and-hamster {
      grid-column: 1 / -1;
    }
    
  </style>
</html>
