---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="Programas, Utilidades, Scripts, Juegos, encuentralos y subelos en segundos con soft-share."
    />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta
      name="keywords"
      content="Software, Subir, Descargar, Donwload, Upload, Share"
    />
    <!-- Icono -->
    <link rel="icon" href="/assets/favicon.png" type="image/png" sizes="24x24" />
    <link
      rel="icon"
      href="/readme images/a5.svg"
      type="image/svg+xml"
      sizes="512x512"
    />
    <meta name="apple-mobile-web-app-title" content="Soft-Share page" />
    <meta name="generator" content={Astro.generator} />
    <meta
      name="google-site-verification"
      content="hzbJZ4KQX_hvr8hMcKMdm5PNV71vwFUSSmTcx7zjmh4"
    />
    <title>{title}</title>
  </head>
  <!-- https://bg.ibelick.com/ -->
  <!-- Background de las lÃ­neas -->
  <body
    class="bg-[var(--background-color)] bg-[linear-gradient(to_right,_#f0f0f0_1px,_transparent_1px),_linear-gradient(to_bottom,_#f0f0f0_1px,_transparent_1px)] dark:bg-none"
  >
    <slot />
  </body>
  <style is:global>
    :root {
      color-scheme: light dark;
      --background-color: #fbfbfe;
      --text-color: #00000;
      --text-gray: #666;
      --blue: #2f27ce;
      --reverse: rgb(0, 0, 0);
    }

    @media (prefers-color-scheme: dark) {
      :root {
        --background-color: #1a1a1a;
        --text-color: #d1d5db;
        --text-gray: #aaa;
        --blue: #8f94ff;
        --reverse: rgb(255, 255, 255);
      }
    }

    @font-face {
      font-family: "geist";
      src: url("/fonts/GeistVF.woff2");
    }

    * {
      box-sizing: border-box;
      margin: 0;
      padding: 0;
    }
    html {
      scroll-behavior: smooth;
    }

    body {
      height: 100%;
      width: 100%;
      display: flex;
      justify-content: center;
      align-items: center;
      font-family: "geist";

      background-color: var(--background-color);
      color: var(--text-color);
    }
    ::selection {
      color: white;
      background-color: black;
    }

    /* Estilos de elementos principales */

    h1 {
      font-size: 4.5em;
      align-self: center;
    }
    h2 {
      font-size: 2rem;
      align-self: center;
    }
    p {
      font-size: 1.2rem;
      text-wrap: balance;
    }

    code {
      font-family:
        Menlo,
        Monaco,
        Lucida Console,
        Liberation Mono,
        DejaVu Sans Mono,
        Bitstream Vera Sans Mono,
        Courier New,
        monospace;
    }
  </style>
</html>
