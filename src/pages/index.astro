---
import Layout from "../layouts/Layout.astro";
import NavTables from "../components/NavTables.astro";
import FeaturedPrograms from "../components/FeaturedPrograms.astro";
import UploadProgram from "../components/UploadProgram.astro";
import Alert from "../components/Alert.astro";
import SuccessAlert from "../components/SuccessAlert.astro";
import CommentsSection from "../components/CommentsSection.astro";
import FeedBack from "../components/FeedBack.astro";
---

<Layout title="Soft-Share - Repositorio de tus programas.">
  <Alert />
  <SuccessAlert />
  <main>
    <h1>Soft-Share</h1>
    <p class="presentation">
      Encuentra una variedad de herramientas informáticas, desde aplicaciones
      completas hasta scripts útiles. <font color="008f39" >Comparte</font> tus propios programas con la
      comunidad y vota por los mejores. Aprovecha una plataforma colaborativa
      para <font color="094293" >explorar</font> , <font color="a65e2e">obtener</font> y  
      <font color="4b0082" >contribuir</font>  tus <span>recursos informáticos.</span>
    </p>
    <NavTables />
    <FeaturedPrograms />
    <UploadProgram />
    <FeedBack />
    <CommentsSection />
  </main>

  <style>
    body {
      padding-bottom: 100px;
    }


    main {
      width: 70%;
      display: flex;
      flex-direction: column;
    }

    span {
      font-weight: 500;
    }

    p.presentation {
      text-align: center;
    }

  </style>
</Layout>

<script>
const fullDate = new Date();

const options: Intl.DateTimeFormatOptions = {
  year: 'numeric',
  month: '2-digit',
  day: '2-digit',
  hour: '2-digit',
  minute: '2-digit',
  hour12: true,
};

// Usamos el método `toLocaleString` con las opciones correctas
const formattedDate = fullDate.toLocaleString('en-US', options);

// Separar fecha y hora para personalizar el formato
const [datePart, timePart] = formattedDate.split(', ');
const [month, day, year] = datePart.split('/');
const resultString = `${day}/${month}/${year} ${timePart}`;

console.log(resultString); // Ejemplo: 15/11/2024 06:55 AM

</script>
