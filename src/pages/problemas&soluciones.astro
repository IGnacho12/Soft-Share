---
import Layout from "../layouts/Layout.astro";
import ProblemaCard from "../components/ProblemaCard.astro";
import { problemas } from '../pages/problemas/problems';
---

<Layout title="Problemas & Soluciones">
  <main class="w-10/12 mx-auto">
    <h1
        class="font-bold mt-2 pb-0 text-5xl lg:text-7xl bg-gradient-to-r dark:from-slate-100 dark:to-slate-400 from-slate-950 to-slate-500 text-transparent dark:text-transparent bg-clip-text text-center"
      >
        PROBLEMAS & SOLUCIONES
      </h1>

    <section class="grid grid-cols-1 lg:grid-cols-2 xl:grid-cols-3 gap-4">
      {
        problemas.map((problema) => (
          <ProblemaCard
            key={problema.id}
            titulo={problema.titulo}
            descripcion={problema.descripcion}
            videoId={problema.videoId}
            videoUrl={problema.videoUrl}
            linkProblema={`${problema.titulo}-problema`}
          />
        ))
      }
    </section>
  </main>
</Layout>
