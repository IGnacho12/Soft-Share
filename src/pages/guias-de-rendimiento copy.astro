---
import Layout from "../layouts/Layout.astro";
import GuiaRendimientoCard from "../components/guiaRendimientoCard.astro";
import { rendimiento } from '../pages/rendimiento/rendimiento';
---

<Layout title="GUÍAS DE RENDIMIENTO">
  <main class="w-10/12 mx-auto">
    <h1
        class="font-bold mt-2 pb-0 text-5xl lg:text-7xl bg-gradient-to-r dark:from-slate-100 dark:to-slate-400 from-slate-950 to-slate-500 text-transparent dark:text-transparent bg-clip-text text-center"
      >
        GUIAS DE RENDIMIENTO
      </h1>

    <section class="grid grid-cols-1 lg:grid-cols-2 xl:grid-cols-3 gap-4">
      {
        rendimiento.map((rendimiento) => (
          <GuiaRendimientoCard
            key={rendimiento.id}
            titulo={rendimiento.titulo}
            descripcion={rendimiento.descripcion}
            videoId={rendimiento.videoId}
            videoUrl={rendimiento.videoUrl}
            linkRendimiento={`${rendimiento.titulo}`}
          />
        ))
      }
    </section>
  </main>
</Layout>
